{
  "topic": {
    "en": "Cardiac Arrhythmia Overview",
    "zh": "心律不整概論"
  },
  "definition": {
    "en": "Cardiac arrhythmia refers to any irregular rate or rhythm in the electrical activity of the heart. Arrhythmias result from abnormalities in impulse generation (automaticity), impulse conduction, or both. They range from benign (e.g., sinus arrhythmia) to life-threatening (e.g., ventricular fibrillation).",
    "zh": "心律不整是指心臟電氣活動的任何不規則頻率或節律。心律不整源於電訊號產生（自動性）、電訊號傳導或兩者的異常。從良性（如竇性心律不整）到危及生命（如心室顫動）不等。"
  },
  "normal_vs_arrhythmia": {
    "title": {
      "en": "Normal Heart Rhythm vs. Arrhythmia",
      "zh": "心臟節律對比：正常 vs. 心律不整"
    },
    "normal_heart": {
      "en": "Normal Heart",
      "zh": "正常心臟",
      "characteristics": [
        {
          "en": "Sinus node generates regular impulses at 60-100 bpm",
          "zh": "竇房結以 60-100 bpm 的頻率發出規律訊號"
        },
        {
          "en": "Signals propagate steadily to AV node",
          "zh": "訊號穩定傳導至房室結"
        },
        {
          "en": "Coordinated atrial and ventricular contraction",
          "zh": "確保心房與心室協調收縮"
        },
        {
          "en": "Regular R-R intervals on ECG",
          "zh": "ECG 上 R-R 間距規則"
        }
      ]
    },
    "arrhythmia": {
      "en": "Arrhythmia",
      "zh": "心律不整",
      "characteristics": [
        {
          "en": "Chaotic or abnormal signal generation",
          "zh": "出現混亂訊號或異常訊號產生"
        },
        {
          "en": "Multiple abnormal impulses (as in AF)",
          "zh": "多個異常電訊號（如心房顫動）"
        },
        {
          "en": "Ineffective atrial contraction",
          "zh": "心房無法有效收縮"
        },
        {
          "en": "Irregular ventricular response",
          "zh": "進而影響心室脈衝的規律性"
        }
      ],
      "example_af": {
        "en": "Example: Atrial Fibrillation",
        "zh": "範例：心房顫動",
        "description": {
          "en": "In atrial fibrillation, the atria have numerous chaotic impulses (atrial fibrillation impulses), preventing effective atrial contraction and causing irregular ventricular response.",
          "zh": "以心房顫動為例，心房內有無數混亂脈衝（atrial fibrillation impulses），導致心房無法有效收縮，進而影響心室脈衝的規律性。"
        }
      }
    }
  },
  "classification": {
    "title": {
      "en": "Classification of Arrhythmias",
      "zh": "心律不整分類"
    },
    "by_rate": {
      "en": "By Heart Rate",
      "zh": "依心率分類",
      "categories": [
        {
          "category": {
            "en": "Bradyarrhythmias (HR < 60 bpm)",
            "zh": "心搏過緩（HR < 60 bpm）"
          },
          "examples": [
            {
              "en": "Sinus bradycardia",
              "zh": "竇性心搏過緩"
            },
            {
              "en": "Sinus node dysfunction (Sick Sinus Syndrome)",
              "zh": "竇房結功能異常（病竇症候群）"
            },
            {
              "en": "AV blocks (1st, 2nd, 3rd degree)",
              "zh": "房室阻滯（第一、二、三度）"
            },
            {
              "en": "Junctional/ventricular escape rhythms",
              "zh": "交界性/心室逸搏節律"
            }
          ]
        },
        {
          "category": {
            "en": "Tachyarrhythmias (HR > 100 bpm)",
            "zh": "心搏過速（HR > 100 bpm）"
          },
          "examples": [
            {
              "en": "Sinus tachycardia",
              "zh": "竇性心搏過速"
            },
            {
              "en": "Supraventricular tachycardia (SVT): AVNRT, AVRT, AT",
              "zh": "心室上頻脈（SVT）：AVNRT、AVRT、AT"
            },
            {
              "en": "Atrial fibrillation / Atrial flutter",
              "zh": "心房顫動/心房撲動"
            },
            {
              "en": "Ventricular tachycardia (VT)",
              "zh": "心室頻脈（VT）"
            },
            {
              "en": "Ventricular fibrillation (VF)",
              "zh": "心室顫動（VF）"
            }
          ]
        }
      ]
    },
    "by_origin": {
      "en": "By Origin",
      "zh": "依起源分類",
      "categories": [
        {
          "category": {
            "en": "Supraventricular (Above ventricles)",
            "zh": "心室上（心室以上）"
          },
          "qrs_width": {
            "en": "Usually narrow QRS (< 120 ms)",
            "zh": "通常窄 QRS（< 120 ms）"
          },
          "examples": [
            {
              "en": "Sinus arrhythmias",
              "zh": "竇性心律不整"
            },
            {
              "en": "Atrial arrhythmias (AF, AFL, AT, MAT)",
              "zh": "心房心律不整（AF、AFL、AT、MAT）"
            },
            {
              "en": "Junctional arrhythmias (AVNRT)",
              "zh": "交界性心律不整（AVNRT）"
            },
            {
              "en": "Accessory pathway-mediated (AVRT)",
              "zh": "副傳導路徑相關（AVRT）"
            }
          ]
        },
        {
          "category": {
            "en": "Ventricular (From ventricles)",
            "zh": "心室（來自心室）"
          },
          "qrs_width": {
            "en": "Wide QRS (≥ 120 ms)",
            "zh": "寬 QRS（≥ 120 ms）"
          },
          "examples": [
            {
              "en": "Premature ventricular contractions (PVCs)",
              "zh": "早發性心室收縮（PVCs）"
            },
            {
              "en": "Ventricular tachycardia (VT)",
              "zh": "心室頻脈（VT）"
            },
            {
              "en": "Ventricular fibrillation (VF)",
              "zh": "心室顫動（VF）"
            },
            {
              "en": "Idioventricular rhythm",
              "zh": "自發性心室節律"
            }
          ]
        }
      ]
    },
    "by_mechanism": {
      "en": "By Mechanism",
      "zh": "依機轉分類",
      "mechanisms": [
        {
          "mechanism": {
            "en": "Abnormal Automaticity",
            "zh": "異常自動性"
          },
          "description": {
            "en": "Enhanced or abnormal spontaneous depolarization of pacemaker or non-pacemaker cells",
            "zh": "起搏細胞或非起搏細胞的自發去極化增強或異常"
          },
          "examples": {
            "en": "Sinus tachycardia, ectopic atrial tachycardia, accelerated idioventricular rhythm",
            "zh": "竇性心搏過速、異位心房頻脈、加速性自發心室節律"
          }
        },
        {
          "mechanism": {
            "en": "Reentry",
            "zh": "折返"
          },
          "description": {
            "en": "Electrical impulse circulates in a closed loop due to dual pathways with different conduction velocities and refractory periods",
            "zh": "電訊號因存在具不同傳導速度及不反應期的雙路徑而在封閉迴路中循環"
          },
          "requirements": [
            {
              "en": "Two distinct pathways",
              "zh": "兩條不同的路徑"
            },
            {
              "en": "Unidirectional block in one pathway",
              "zh": "其中一條路徑單向阻滯"
            },
            {
              "en": "Slow conduction in alternate pathway",
              "zh": "替代路徑傳導緩慢"
            }
          ],
          "examples": {
            "en": "AVNRT, AVRT, atrial flutter, scar-related VT, most AF",
            "zh": "AVNRT、AVRT、心房撲動、疤痕相關 VT、大多數 AF"
          }
        },
        {
          "mechanism": {
            "en": "Triggered Activity",
            "zh": "觸發活動"
          },
          "description": {
            "en": "Afterdepolarizations trigger abnormal impulses",
            "zh": "後去極化觸發異常電訊號"
          },
          "subtypes": [
            {
              "type": {
                "en": "Early Afterdepolarizations (EADs)",
                "zh": "早期後去極化（EADs）"
              },
              "phase": {
                "en": "Phase 2/3",
                "zh": "Phase 2/3"
              },
              "cause": {
                "en": "Prolonged action potential (long QT)",
                "zh": "動作電位延長（長 QT）"
              },
              "example": {
                "en": "Torsades de Pointes",
                "zh": "尖端扭轉型心室頻脈"
              }
            },
            {
              "type": {
                "en": "Delayed Afterdepolarizations (DADs)",
                "zh": "延遲後去極化（DADs）"
              },
              "phase": {
                "en": "Phase 4",
                "zh": "Phase 4"
              },
              "cause": {
                "en": "Intracellular Ca²⁺ overload",
                "zh": "細胞內 Ca²⁺ 過載"
              },
              "example": {
                "en": "Digitalis toxicity, CPVT",
                "zh": "毛地黃中毒、CPVT"
              }
            }
          ]
        },
        {
          "mechanism": {
            "en": "Conduction Abnormalities",
            "zh": "傳導異常"
          },
          "description": {
            "en": "Block or delay in normal conduction pathways",
            "zh": "正常傳導路徑的阻滯或延遲"
          },
          "examples": {
            "en": "SA exit block, AV blocks (1st, 2nd, 3rd degree), bundle branch blocks",
            "zh": "SA 出口阻滯、AV 阻滯（第一、二、三度）、束支傳導阻滯"
          }
        }
      ]
    }
  },
  "etiology": {
    "title": {
      "en": "Common Causes of Arrhythmias",
      "zh": "心律不整常見病因"
    },
    "categories": [
      {
        "category": {
          "en": "Structural Heart Disease",
          "zh": "結構性心臟疾病"
        },
        "causes": [
          {
            "en": "Coronary artery disease / Myocardial infarction",
            "zh": "冠狀動脈疾病/心肌梗塞"
          },
          {
            "en": "Cardiomyopathy (dilated, hypertrophic, arrhythmogenic)",
            "zh": "心肌病變（擴張性、肥厚性、致心律失常性）"
          },
          {
            "en": "Valvular heart disease",
            "zh": "瓣膜性心臟病"
          },
          {
            "en": "Congenital heart disease",
            "zh": "先天性心臟病"
          },
          {
            "en": "Heart failure",
            "zh": "心衰竭"
          }
        ]
      },
      {
        "category": {
          "en": "Electrolyte Abnormalities",
          "zh": "電解質異常"
        },
        "causes": [
          {
            "en": "Hypokalemia / Hyperkalemia",
            "zh": "低血鉀/高血鉀"
          },
          {
            "en": "Hypomagnesemia",
            "zh": "低血鎂"
          },
          {
            "en": "Hypocalcemia / Hypercalcemia",
            "zh": "低血鈣/高血鈣"
          }
        ]
      },
      {
